<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atp__activity_home_background"
    android:orientation="vertical"
    tools:context=".DangKy_form">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/atp__activity_player_layout_help_call_04_active" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTendangnhap"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:gravity="center"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtMatkhau"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:ems="10"
            android:gravity="center"
            android:hint="Mật khẩu"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:ems="10"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtXacnhanLaiMatKhau"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:ems="10"
            android:gravity="center"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnLayMk3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/atp__activity_player_layout_play_answer_background_selected"
            android:gravity="center"
            android:onClick="DangKi"
            android:text="Đăng ký"
            android:textColor="#FCF8F8"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>