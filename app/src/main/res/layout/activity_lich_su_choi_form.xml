<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LichSuChoi_form">
    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="243dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:background="#03A9F4"
        android:text="nguyenvantan"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/txtCredit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCredit"
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="#FF9800"
        android:text="2000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtUsername"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtnBuycredit"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:background="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtCredit"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/diamond" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử chơi"
        android:textColor="#F44336"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="408dp"
        android:layout_height="44dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="1/11/2019 16:11pm
        Số câu đúng : 10
        Điểm : 2.790
"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="153dp" />

</androidx.constraintlayout.widget.ConstraintLayout>