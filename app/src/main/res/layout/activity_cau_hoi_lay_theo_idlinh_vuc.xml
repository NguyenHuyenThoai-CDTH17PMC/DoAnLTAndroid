<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CauHoiLayTheoIDLinhVuc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:text="nguyenvantan"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgLife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/heart" />

            <TextView
                android:id="@+id/txtHP"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5X" />

            <TextView
                android:id="@+id/txtCredit"
                android:layout_width="79dp"
                android:layout_height="29dp"
                android:background="#8BC34A"
                android:text="2000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgbtnBuycredit"
                android:layout_width="88dp"
                android:layout_height="30dp"
                android:background="#FF9800"
                app:srcCompat="@drawable/diamond" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtdiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Điểm : "
                android:textColor="#F44336"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2000"
                android:textColor="#F44336"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Câu hỏi"
            android:textColor="#00BCD4"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtid"
            android:layout_width="99dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="#00BCD4"
            android:text="9"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/txtCauHoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Một con vịt xòe ra bao nhiêu cái cánh ?"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnA"
                android:layout_width="208dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#2196F3"
                android:onClick="Tieptuc"
                android:text="A. Một cái" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="208dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#2196F3"
                android:onClick="Tieptuc"
                android:text="B. Hai cái" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="208dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#2196F3"
                android:onClick="Tieptuc"
                android:text="C. Ba cái" />

            <Button
                android:id="@+id/btnD"
                android:layout_width="208dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#2196F3"
                android:onClick="Tieptuc"
                android:text="D. Bốn cái" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="79dp"
                android:layout_height="40dp"
                android:text="15s"
                android:textColor="#FF9800"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="52dp"
                android:layout_height="47dp"
                app:srcCompat="@android:drawable/presence_away" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="15dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_rotate" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="15dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_launcher_50" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="15dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_launcher_people" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="15dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_launcher_call"
                android:onClick="trogiup" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_launcher_cong" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>