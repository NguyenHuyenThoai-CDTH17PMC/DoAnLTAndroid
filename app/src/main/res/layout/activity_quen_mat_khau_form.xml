<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atp__activity_home_background"
    android:orientation="vertical"
    tools:context=".QuenMatKhau_form">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/atp__activity_player_layout_help_call_04_active" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTendangnhapqm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:gravity="center"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtEmailqm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtmatkhauqm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:gravity="center"
            android:hint="Mật khẩu mới"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtxn_matkhauqm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:gravity="center"
            android:hint="Xác nhận mật khẩu mới"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnLayMk"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/atp__dialog_confirm_background_button_active"
            android:gravity="center"
            android:onClick="laymk"
            android:text="Lấy lại mật khẩu"
            android:textColor="#FCF8F8" />

    </LinearLayout>

</LinearLayout>