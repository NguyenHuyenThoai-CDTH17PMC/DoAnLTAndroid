<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atp__activity_home_background"
    android:orientation="vertical"
  >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

                <TextView
                    android:id="@+id/txtmuacredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/atp__dialog_confirm_background_button"
                    android:gravity="center"
                    android:text="Mua credit"
                    android:textColor="#F44336"
                    android:textSize="40dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewCredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>
