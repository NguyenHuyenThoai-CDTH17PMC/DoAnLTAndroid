<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhChinh_form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="174dp"
            android:layout_height="154dp"
            android:layout_marginStart="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="119dp"
            tools:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="36dp"
                android:layout_height="21dp"
                android:layout_marginStart="143dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="11dp"
                app:srcCompat="@drawable/ruby" />

            <TextView
                android:id="@+id/txtCredit"
                android:layout_width="109dp"
                android:layout_height="25dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="112dp"
                android:text="2000"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="143dp"
            android:layout_marginTop="12dp"
            android:gravity="center|fill"
            android:text="nguyenvantan"
            android:textColor="#2196F3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnAccountmanagerment"
            android:layout_width="187dp"
            android:layout_height="42dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="112dp"
            android:background="#4CAF50"
            android:onClick="QuanLiTaiKhoan"
            android:text="Quản lí tài khoản" />

        <Button
            android:id="@+id/btnNewgame"
            android:layout_width="187dp"
            android:layout_height="42dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="112dp"
            android:background="#03A9F4"
            android:text="Trò chơi mới" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="187dp"
            android:layout_height="42dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="112dp"
            android:background="#673AB7"
            android:text="Lịch sử chơi" />

        <Button
            android:id="@+id/btnRanking"
            android:layout_width="187dp"
            android:layout_height="42dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="112dp"
            android:background="#E91E63"
            android:text="Bảng xếp hạng" />

        <Button
            android:id="@+id/btnBuycredit"
            android:layout_width="187dp"
            android:layout_height="42dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="112dp"
            android:background="#FFC107"
            android:text="Mua thêm Credit" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>